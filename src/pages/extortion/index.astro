---
import { getLangFromUrl, useTranslations } from '/src/i18n/utils';

import Layout from '/src/layout/layout.astro';

import '/src/css/home.css';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<Layout title="Extortion">
	<div class="home">
		<p>Extortion</p>
		<ul>
			<li><a href="/extortion/achievements">{t(`extortion:wiki:achievement-page-title`)}</a></li>
			<li><a href="/extortion/servers">{t(`extortion:wiki:servers-page-title`)}</a></li>
		</ul>
	</div>
</Layout>
