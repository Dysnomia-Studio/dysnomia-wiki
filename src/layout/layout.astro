---
import { getLangFromUrl, useTranslatedPath, useTranslations } from '/src/i18n/utils';

import Menu from '../components/Menu';
import Footer from '../components/Footer/index.astro';

import './layout.css';

const { title, description } = Astro.props;
const currLang = getLangFromUrl(Astro.url);
const t = useTranslations(currLang);
const translatePath = useTranslatedPath(currLang);
---
<html lang={currLang}>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content={description || 'Welcome to the official Dysnomia\'s games wiki'}>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>Dysnomia Wiki - {title}</title>
	</head>
	<body>
		<Menu t={t} translatePath={translatePath} />
		<slot /> <!-- page content -->
		<Footer />
	</body>
</html>