---
import { getLangFromUrl, useTranslatedPath, useTranslations } from '/src/i18n/utils';

import Menu from '../components/Menu';
import Footer from '../components/Footer/index.astro';

import './layout.css';

const { title, description } = Astro.props;
const currLang = getLangFromUrl(Astro.url);
const t = useTranslations(currLang);
const translatePath = useTranslatedPath(currLang);
---
<html lang={currLang}>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content={description || 'Welcome to the official Dysnomia\'s games wiki'}>
		<link rel="sitemap" href="/sitemap-index.xml" />

		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<link rel="shortcut icon" href="/favicons/favicon.ico">
		<meta name="apple-mobile-web-app-title" content="Dysnomia">
		<meta name="application-name" content="Dysnomia">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="msapplication-config" content="/favicons/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

		<title>Dysnomia Wiki - {title}</title>
	</head>
	<body>
		<Menu t={t} translatePath={translatePath} />
		<slot /> <!-- page content -->
		<Footer />
	</body>
</html>